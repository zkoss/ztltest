<test tags="B50-2916148.zul,Errorbox,ie9,blur">
	<case id="closed">
		<server>
			<!--
<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<zk>
Please focus in and out, and click the close sign (X), the errorbox should
be closed.
<textbox id="tb" constraint="no empty"/>
</zk>
			-->
		</server>
		<client>	<![CDATA[
				focus(tb);
				blur(tb);
				waitResponse();
				verifyTrue(jq(".z-errorbox").exists());
				waitResponse();
				click(jq(".z-errorbox").toWidget().$n("cls"));
				waitResponse();
				verifyFalse(jq(".z-errorbox").exists());		
			]]></client>
	</case>
</test>