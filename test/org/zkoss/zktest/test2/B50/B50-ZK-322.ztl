<test tags="B50-ZK-322.zul,A,E,Frozen,Grid,Footer">
	<case id="ztl">
		<server><!--

			<window title="Hello World!!" border="normal" width="100%">
				Please scroll to the end of the grid, and the width of "col1" shouldn't be increased and no Javascript error.
				<div>
					<grid id="grid" width="300px">
						<frozen id="fz" columns="1" />
						<columns sizable="true" width="100px">
							<column label="col1"/>
							<column label="col2"/>
							<column label="col3"/>
							<column label="col4"/>
							<column label="col5"/>
						</columns>
						<rows>
							<row>
								<label value="cell1" />
								<label value="cell2" />
								<label value="cell3" />
								<label value="cell4" />
								<label value="cell5" />
							</row>
						</rows>
						<foot>
							<footer label="foot1" />
							<footer label="foot2" />
							<footer label="foot3" />
							<footer label="foot4" />
							<footer label="foot5" />
						</foot>
					</grid>
					</div>
			</window>

		--></server>
		<client><![CDATA[
			jq(".z-scrollbar").eval("opacity = 1");
			int wh1 = jq(jq(grid.$n("head")).find(".z-columns").find(".z-column").get(0)).outerWidth();
			int wb1 = jq(jq(grid.$n("body")).find(".z-rows").find(".z-row-inner").get(0)).outerWidth();
			int wf1 = jq(jq(grid.$n("foot")).find(".z-foot").find(".z-footer").get(0)).outerWidth();
			
			clickAt(jq(".z-scrollbar-rail"),"150,8");
			waitResponse();
			
			verifyTrue(jq(jq(grid.$n("head")).find(".z-columns").find(".z-column").get(0)).outerWidth() == wh1);
			verifyTrue(jq(jq(grid.$n("body")).find(".z-rows").find(".z-row-inner").get(0)).outerWidth() == wb1);
			verifyTrue(jq(jq(grid.$n("foot")).find(".z-foot").find(".z-footer").get(0)).outerWidth() == wf1);			
		]]></client>
	</case>
</test>
