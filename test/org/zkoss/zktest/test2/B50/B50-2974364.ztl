					<listitem label="B" />
					<listitem label="C" />
					</listbox>
					</bandpopup>
					</bandbox>
					<button id="btn" label="switchStyle" onClick="switchStyle()" />
					<zscript>
					void switchStyle() {
					Object tag = btn.getAttribute("tag");
					if (tag == null) {
					btn.setAttribute("tag", "1");
					bb.setStyle("color:green;font-weight:bold");
					} else {
					btn.removeAttribute("tag");
					bb.setStyle("");
					}
					}
