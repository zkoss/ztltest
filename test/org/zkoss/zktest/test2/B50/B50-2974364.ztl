		</server>
		<client><![CDATA[
				Element bandinp = bb.$n("real");
				String origColor = jq(bandinp).css("color");
				click(btn);
				waitResponse();
				boolean color = ColorVerifingHelper.isEqualColor("green",jq(bandinp).css("color"));
				verifyTrue(color);
				if (!("bold".equals(jq(bandinp).css("font-weight")) || "700".equals(jq(bb.$n("real")).css("font-weight"))))
					verifyTrue(false);
				click(btn);
				waitResponse();
				verifyEquals(origColor, jq(bandinp).css("color"));
				if (!("normal".equals(jq(bandinp).css("font-weight")) || "400".equals(jq(bandinp).css("font-weight"))))
				    verifyTrue(false);
			]]></client>
