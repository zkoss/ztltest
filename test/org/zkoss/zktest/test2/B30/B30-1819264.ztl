<test tags="B30-1819264.zul,Textbox,Borderlayout,Errorbox,Constraint,ie9">
	<case id="Constraint">
		<server><!--
<borderlayout height="300px">
	<center autoscroll="true">
		<div height="500px">
			Please focus in the textbox, then focus out, and then when
			you scroll up/down the scroll bar, the error box should be
			moved according to the textbox.
			<separator />
			<textbox id="tb" value="show Error" constraint="/.+@.+\.[a-z]+/" />
		</div>
	</center>
</borderlayout>
		 --></server>
		<client><![CDATA[
			Element cave = widget(jq(".z-center")).$n("cave");
			focus(tb);
			blur(tb);
			verifyTrue(jq("@errorbox").exists());
			int top = getScrollTop(jq("@errorbox").toWidget());
			verScroll(cave, .1);
			JQuery rail = jq(widget(jq(".z-center")).$n("ver-rail"));
			verifyEquals(jq(tb).offsetTop(), jq("@errorbox").offsetTop());
			verScroll(cave, 0);
			verifyEquals(top, getScrollTop(jq("@errorbox").toWidget()));
		]]></client>
	</case>
</test>